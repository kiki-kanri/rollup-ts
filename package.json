{
  "name": "ts-project-builder",
  "version": "3.2.0",
  "description": "A powerful TypeScript project builder supporting multiple output formats, automatic cleaning, and customizable plugins.",
  "license": "MIT",
  "author": "kiki-kanri",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kiki-kanri/ts-project-builder.git"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "bin": "./dist/cli.mjs",
  "files": [
    "./dist"
  ],
  "scripts": {
    "build": "tsx ./src/cli.ts './src/**/*.ts' --clean --preserve-modules",
    "bumplog": "changelogen --bump",
    "prepack": "pnpm run build",
    "release": "changelogen --release"
  },
  "types": "./dist/index.d.ts",
  "dependencies": {
    "@rollup/plugin-commonjs": "^28.0.1",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-typescript": "^12.1.1",
    "cleye": "^1.3.2",
    "colorette": "^2.0.20",
    "glob": "^11.0.0",
    "lodash-es": "^4.17.21",
    "pretty-ms": "^9.1.0",
    "rollup": "^4.24.0",
    "rollup-plugin-esbuild": "^6.1.1",
    "rollup-plugin-node-externals": "^7.1.3"
  },
  "devDependencies": {
    "@kikiutils/changelogen": "^0.6.0",
    "@kikiutils/prettierrc": "^1.3.2",
    "@kikiutils/tsconfigs": "^3.0.1",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.7.6",
    "tslib": "^2.8.0",
    "tsx": "^4.19.1"
  },
  "keywords": [
    "build tool",
    "builder",
    "customizable",
    "minification",
    "module formats",
    "rollup",
    "typescript"
  ],
  "engines": {
    "node": ">=18.12"
  },
  "prettier": "@kikiutils/prettierrc"
}
